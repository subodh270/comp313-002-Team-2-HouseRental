<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backimg"
    tools:context=".PostAdvertisementActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/house_rental1"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post an Advertisement"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:layout_marginTop="20dp"
            />

        <EditText
            android:id="@+id/editText29"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Title"
            android:textColorHint="#000000"
            android:layout_gravity="center"

            android:drawablePadding="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit"
            android:padding="20dp"
            />

        <EditText
            android:id="@+id/editText31"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:hint="Description"
            android:textColorHint="#000000"
            android:layout_gravity="center"

            android:drawablePadding="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit"
            android:padding="20dp"
            />

        <EditText
            android:id="@+id/editText32"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="City"
            android:textColorHint="#000000"
            android:layout_gravity="center"

            android:drawablePadding="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit"
            android:padding="20dp"
            />

        <EditText
            android:id="@+id/editText33"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:hint="Price"
            android:textColorHint="#000000"
            android:layout_gravity="center"

            android:drawablePadding="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit"
            android:padding="20dp"
            />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />

        <Button
            android:id="@+id/buttonChoose"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="Choose Image"
            android:background="@drawable/button"
            android:layout_marginTop="30dp"
            android:drawablePadding="15dp"
            />

        <Button
            android:id="@+id/buttonUpload"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="Upload"
            android:background="@drawable/button"
            android:layout_marginTop="10dp"
            android:drawablePadding="15dp"
            />





    </LinearLayout>






</ScrollView>
</LinearLayout>